<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:app="http://schemas.android.com/apk/res-auto">    <LinearLayout        app:layout_constraintTop_toTopOf="parent"        android:layout_marginTop="10dp"        android:layout_marginBottom="10dp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:background="@drawable/myinfo_bg">        <LinearLayout            android:layout_margin="16dp"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical">            <TextView                android:id="@+id/msgName"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="System Information"                android:typeface="sans"                android:textColor="#ff3c4043"                android:textSize="16sp"                />            <TextView                android:visibility="gone"                android:id="@+id/msgDesc"                android:layout_marginTop="6dp"                android:layout_toLeftOf="@+id/coin_num"                android:layout_alignParentLeft="true"                android:layout_centerVertical="true"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="You have changed your new password information"                android:textColor="@color/common_hint_txt_color"                android:textSize="14sp"                android:typeface="sans"                />            <RelativeLayout                android:layout_marginTop="14dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/msgTime"                    android:layout_toLeftOf="@+id/coin_num"                    android:layout_alignParentLeft="true"                    android:layout_centerVertical="true"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="08/04/2019"                    android:textColor="@color/common_hint_txt_color"                    android:textSize="14sp"                    android:typeface="sans"                    />                <TextView                    android:id="@+id/go"                    android:visibility="gone"                    android:layout_centerVertical="true"                    android:layout_alignParentRight="true"                    android:layout_width="26dp"                    android:layout_height="18dp"                    android:text="GO"                    android:typeface="sans"                    android:textColor="#ffff4242"                    android:textSize="14sp"                    />            </RelativeLayout>        </LinearLayout>    </LinearLayout></android.support.constraint.ConstraintLayout>