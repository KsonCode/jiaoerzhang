<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                                             android:fitsSystemWindows="true"
    tools:context=".ui.activity.user.DailyTaskActivity">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_marginTop="12dp"
        android:layout_marginRight="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:padding="14dp"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/back_gray_icon" />


        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@color/transparentnew"
            android:hint="Collection"
            android:imeOptions="actionSearch"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:text="Daily Task"
            android:textColor="@color/common_txt_color"
            android:textColorHint="@color/common_hint_txt_color"
            android:textSize="18sp"
            android:typeface="sans" />


    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do the task, take Lady Coins"
                android:textColor="#ff3c4043"
                android:textSize="18sp"
                android:typeface="sans"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q: What is Lady Coin?"
                android:textColor="#ffb5b7bc"
                android:textSize="12sp"
                android:typeface="sans"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A: Lady Coin can be redeemed for viewing pictures."
                android:textColor="#ffb5b7bc"
                android:textSize="12sp"
                android:typeface="sans"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@drawable/myinfo_bg">

            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily check-in"
                    android:typeface="sans"
                    android:textColor="#ff3c4043"
                    android:textSize="16sp"
                    />

                <RelativeLayout
                    android:layout_marginTop="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_toLeftOf="@+id/coin_num"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily login Want Lady check-in"
                        android:textColor="#ff3c4043"
                        android:textSize="14sp"
                        android:typeface="sans"
                        />
                    <TextView
                        android:id="@+id/coin_num"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+5"
                        android:drawablePadding="2dp"
                        android:drawableLeft="@mipmap/copyright_icon"
                        android:textColor="#fffab700"
                        android:textSize="16sp"
                        />
                </RelativeLayout>

                <Button
                    android:id="@+id/check_in"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:layout_width="189dp"
                    android:typeface="sans"
                    android:text="go to check-in"
                    android:textSize="14sp"
                    android:background="@drawable/red_corner_bg"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"

            android:background="@drawable/myinfo_bg">

            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share to friends"
                    android:typeface="sans"
                    android:textColor="#ff3c4043"
                    android:textSize="16sp"
                    />

                <RelativeLayout
                    android:layout_marginTop="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_toLeftOf="@+id/coin_num2"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share Want Lady to your friends"
                            android:textColor="#ff3c4043"
                            android:textSize="14sp"
                            android:typeface="sans"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share up to 5 times a day"
                            android:textColor="#ff80868b"
                            android:textSize="12sp"
                            android:typeface="sans"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/coin_num2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+5"
                        android:drawablePadding="2dp"
                        android:drawableLeft="@mipmap/copyright_icon"
                        android:textColor="#fffab700"
                        android:textSize="16sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_toLeftOf="@+id/coin_num3"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share Want Lady to your friends and register"
                            android:textColor="#ff3c4043"
                            android:textSize="14sp"
                            android:typeface="sans"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share up to 5 times a day"
                            android:textColor="#ff80868b"
                            android:textSize="12sp"
                            android:typeface="sans"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/coin_num3"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+10"
                        android:drawablePadding="2dp"
                        android:drawableLeft="@mipmap/copyright_icon"
                        android:textColor="#fffab700"
                        android:textSize="16sp"
                        />
                </RelativeLayout>

                <Button
                    android:id="@+id/share"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:layout_width="189dp"
                    android:typeface="sans"
                    android:text="go to share"
                    android:textSize="14sp"
                    android:background="@drawable/red_corner_bg"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>