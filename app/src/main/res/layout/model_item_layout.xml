<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:app="http://schemas.android.com/apk/res-auto">    <LinearLayout        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintTop_toTopOf="parent"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">        <RelativeLayout            app:layout_constraintLeft_toLeftOf="parent"            app:layout_constraintTop_toTopOf="parent"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="15dp">            <com.facebook.drawee.view.SimpleDraweeView                android:id="@+id/topIcon"                android:layout_width="36dp"                android:layout_centerVertical="true"                android:layout_height="36dp"                app:actualImageScaleType="centerCrop"                app:placeholderImage="@drawable/placeholder"                android:layout_marginRight="15dp"                app:roundAsCircle="true"/>            <TextView                android:id="@+id/topNameTv"                android:layout_toRightOf="@+id/topIcon"                android:textColor="@color/common_txt_color"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:typeface="sans"                android:textSize="16sp"                android:layout_centerVertical="true"                android:text="Carolyn Goodman"/>            <TextView                    android:id="@+id/followingNum"                android:layout_alignParentRight="true"                android:typeface="sans"                android:layout_centerVertical="true"                android:textSize="12sp"                android:text="0"                android:gravity="center"                android:drawableRight="@mipmap/unfollow_icon"                android:drawablePadding="4dp"                android:textColor="@color/common_hint_txt_color"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />        </RelativeLayout>        <View            android:layout_width="match_parent"            android:layout_height="1dp"            android:background="#EEEEEE"/>    </LinearLayout></android.support.constraint.ConstraintLayout>