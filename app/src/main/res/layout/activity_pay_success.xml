<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true"    tools:context=".ui.activity.user.PaySuccessActivity">    <LinearLayout        android:id="@+id/top_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="12dp"        android:layout_marginRight="14dp"        android:orientation="horizontal"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintTop_toTopOf="parent">        <ImageView            android:id="@+id/back"            android:padding="14dp"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:src="@mipmap/back_gray_icon" />        <TextView            android:id="@+id/search"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_marginLeft="15dp"            android:background="@color/transparentnew"            android:hint="Payment Successfully"            android:imeOptions="actionSearch"            android:paddingTop="12dp"            android:paddingBottom="12dp"            android:singleLine="true"            android:text="Payment Successfully"            android:textColor="@color/common_txt_color"            android:textColorHint="@color/common_hint_txt_color"            android:textSize="18sp"            android:typeface="sans" />    </LinearLayout>    <ImageView        android:id="@+id/success_bg"        app:layout_constraintTop_toBottomOf="@+id/top_layout"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        android:layout_marginTop="96dp"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:src="@mipmap/recharge_success"/>    <LinearLayout        android:layout_marginTop="30dp"        app:layout_constraintTop_toBottomOf="@+id/success_bg"        android:layout_width="match_parent"        android:layout_height="wrap_content" android:orientation="vertical">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:text="Payment submitted successfully"            android:textColor="#ff3c4043"            android:typeface="sans"            android:textSize="16sp"            />        <TextView            android:id="@+id/price"            android:typeface="sans"            android:layout_width="116dp"            android:layout_height="41dp"            android:text="$ 00.00"            android:layout_marginTop="10dp"            android:textColor="#ff3c4043"            android:textSize="32sp"            android:layout_gravity="center"            />    </LinearLayout>    <LinearLayout        app:layout_constraintBottom_toBottomOf="parent"        android:layout_marginTop="52dp"        android:layout_marginBottom="38dp"        android:layout_width="match_parent"        android:layout_height="wrap_content" android:orientation="vertical">        <Button            android:id="@+id/done"            android:typeface="sans"            android:background="@drawable/red_corner_bg"            android:layout_gravity="center"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="DONE"            android:textColor="#ffffffff"            android:textSize="14sp"            />        <Button            android:id="@+id/check_order"            android:background="@drawable/red_stroke_bg"            android:layout_marginTop="14dp"            android:layout_gravity="center"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="CHECK ORDER"            android:textColor="#ffff4242"            android:textSize="14sp"            />    </LinearLayout></android.support.constraint.ConstraintLayout>