<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                                             android:fitsSystemWindows="true"
    tools:context=".ui.activity.user.MyInfoActivity">

    <LinearLayout
        android:layout_marginRight="14dp"
        android:id="@+id/top_layout"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:padding="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/back_gray_icon"/>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Information"
                    android:singleLine="true"
                    android:paddingTop="12dp"
                    android:imeOptions="actionSearch"
                    android:paddingBottom="12dp"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:background="@color/transparentnew"
                    android:hint="My Information"
                    android:textColor="@color/common_txt_color"
                    android:textColorHint="@color/common_hint_txt_color"
                    android:typeface="sans"
                    />
                <TextView
                    android:id="@+id/save"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Save"
                    android:typeface="sans"
                    android:textColor="#ff5f6368"
                    android:textSize="16sp"
                    />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:background="#eeeeee"
                android:layout_height="1dp"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@+id/top_layout"

        android:id="@+id/photo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myinfo_bg"
        android:layout_margin="14dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="14dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textColor="#ff80868b"
                android:textSize="14sp"
                android:typeface="sans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Personalize with photos"
                android:textColor="#ff80868b"
                android:textSize="16sp"
                android:typeface="sans" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/myinfo_icon"
                android:layout_width="44dp"
                app:roundAsCircle="true"
                android:layout_height="44dp" />

            <FrameLayout
                android:id="@+id/photoFrameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/myinfo_camara_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/camara_icon" />
            </FrameLayout>


        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@+id/photo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:background="@drawable/myinfo_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="14dp"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:typeface="sans"
                android:textColor="#ff80868b"
                android:textSize="14sp"
                />

            <EditText
                android:id="@+id/nameTv"
                android:background="@color/transparentnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Your Name"
                android:textColor="@color/common_txt_color"
                android:textSize="16sp"
                android:typeface="sans"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>