<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_marginRight="15dp"    android:layout_marginBottom="15dp"    xmlns:app="http://schemas.android.com/apk/res-auto">        <LinearLayout            app:layout_constraintTop_toTopOf="parent"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical">            <com.facebook.drawee.view.SimpleDraweeView                android:layout_width="match_parent"                android:layout_height="wrap_content"                app:roundedCornerRadius="7dp"                app:actualImageScaleType="centerCrop"                app:viewAspectRatio="1"                android:id="@+id/itemIcon"                app:placeholderImage="@drawable/placeholder"                />            <RelativeLayout                android:layout_marginTop="10dp"                android:layout_width="wrap_content"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/itemNameTv"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:typeface="sans"                    android:textSize="12sp"                    android:textColor="@color/common_hint_txt_color"                    android:text="小可爱"/>                <TextView                    android:id="@+id/heart_icon"                    android:layout_alignParentRight="true"                    android:typeface="sans"                    android:textSize="12sp"                    android:text="0"                    android:drawableRight="@mipmap/home_gray_heart_icon"                    android:drawablePadding="4dp"                    android:textColor="@color/common_hint_txt_color"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />            </RelativeLayout>        </LinearLayout></android.support.constraint.ConstraintLayout>