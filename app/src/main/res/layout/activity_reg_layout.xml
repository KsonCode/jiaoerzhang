<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:fitsSystemWindows="true"
    android:background="@color/white">


        <LinearLayout
            android:layout_margin="40dp"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:typeface="sans"
                android:textColor="#ff80868b"
                android:textSize="12sp"
                />

            <EditText
                android:id="@+id/et_phone_num"
                android:layout_marginTop="10dp"
                android:background="@color/transparentnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Enter the Phone Number"
                android:textColorHint="@color/common_hint_gray_color"
                android:typeface="sans"
                android:textColor="#ff3c4043"
                android:inputType="number"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:background="#EEEEEE"
                android:layout_marginTop="10dp"
                android:layout_height="1dp"/>



            <LinearLayout
                android:id="@+id/code_login_layout"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTP Code"
                    android:typeface="sans"
                    android:textColor="#ff80868b"
                    android:textSize="12sp"
                    />
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal">


                    <EditText
                        android:background="@color/transparentnew"
                        android:id="@+id/code"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Enter the Code"
                        android:textColorHint="@color/common_hint_gray_color"
                        android:typeface="sans"
                        android:textColor="#ff3c4043"
                        android:textSize="14sp"
                        android:inputType="number"
                        />

                    <TextView
                        android:id="@+id/click_get_code"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click to Get"
                        android:textSize="14sp"
                        android:typeface="sans"
                        android:textColor="@color/common_red_txt_color"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:layout_height="1dp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/pwd_login_layout"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:typeface="sans"
                    android:textColor="#ff80868b"
                    android:textSize="12sp"
                    />
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal">


                    <EditText
                        android:layout_toLeftOf="@+id/eye_icon"
                        android:background="@color/transparentnew"
                        android:id="@+id/pwd"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Enter the Password"
                        android:textColorHint="@color/common_hint_gray_color"
                        android:typeface="sans"
                        android:textColor="#ff3c4043"
                        android:textSize="14sp"
                        android:inputType="textPassword"
                        />

                    <ImageView
                        android:id="@+id/eye_icon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/eye_no_icon"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:layout_height="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/invitation_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invitation Code"
                    android:typeface="sans"
                    android:textColor="#ff80868b"
                    android:textSize="12sp"
                    />
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal">


                    <EditText
                        android:background="@color/transparentnew"
                        android:id="@+id/invitationCodeEt"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Enter the Invitation Code"
                        android:textColorHint="@color/common_hint_gray_color"
                        android:typeface="sans"
                        android:textColor="#ff3c4043"
                        android:textSize="14sp"
                        />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:layout_height="1dp"/>

            </LinearLayout>


            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invitation Code"
                android:textColor="#ffff4242"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
                <Button
                    android:background="@drawable/red_corner_bg"
                    android:id="@+id/reg"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:typeface="sans"
                    android:layout_height="wrap_content"
                    android:text="SIGN UP"/>

                <TextView
                    android:id="@+id/goLogin"
                    android:layout_marginTop="19dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? Go to login"
                    android:textColor="#ffff4242"
                    android:textSize="12sp"
                    android:typeface="sans"
                    />

            </LinearLayout>




        </LinearLayout>

    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/user_reg_icon" />

    <LinearLayout
        android:layout_alignParentBottom="true"

        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:typeface="sans"
                android:textSize="12sp"
                android:gravity="center"
                android:text="By logging in, you agree to our " />
            <TextView
                android:id="@+id/terms"
                android:typeface="sans"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Terms Of Use" />
            <TextView
                android:typeface="sans"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" \u0026" />

        </LinearLayout>

        <TextView
            android:id="@+id/policy"
            android:gravity="center"
            android:text="Privacy Policy."
            android:typeface="sans"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>