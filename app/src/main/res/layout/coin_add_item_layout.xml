<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:app="http://schemas.android.com/apk/res-auto">    <RelativeLayout        android:id="@+id/layout"        app:layout_constraintTop_toTopOf="parent"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingTop="14dp"        android:paddingBottom="14dp">        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content" android:orientation="horizontal">            <ImageView                android:layout_marginLeft="4dp"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:src="@drawable/dot_red_bg"/>            <LinearLayout                android:layout_marginLeft="18dp"                android:layout_marginRight="18dp"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:orientation="vertical">                <TextView                    android:id="@+id/coin_content"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Daily Check-in"                    android:textColor="#ff3c4043"                    android:typeface="sans"                    android:textSize="16sp"                    />                <TextView                    android:id="@+id/coin_time"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="04/28/2019"                    android:textColor="#ffbac0c6"                    android:textSize="14sp"                    android:typeface="sans"                    android:layout_marginTop="8dp"                    />            </LinearLayout>        </LinearLayout>        <TextView            android:id="@+id/coin_num"            android:layout_alignParentRight="true"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="+5"            android:typeface="sans"            android:layout_centerVertical="true"            android:textColor="#ffff4242"            android:textSize="14sp"            />    </RelativeLayout>    <View        app:layout_constraintTop_toBottomOf="@+id/layout"        android:layout_width="match_parent"        android:background="#eeeeee"        android:layout_height="1dp"/></android.support.constraint.ConstraintLayout>