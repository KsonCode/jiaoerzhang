<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:fitsSystemWindows="true"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".ui.activity.user.settings.ChangePWDActivity">    <LinearLayout        android:id="@+id/top_layout"        android:layout_marginTop="12dp"        android:layout_marginRight="14dp"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintTop_toTopOf="parent"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:orientation="horizontal">        <ImageView            android:id="@+id/back"            android:padding="14dp"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:src="@mipmap/back_gray_icon" />        <TextView            android:id="@+id/search"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_marginLeft="15dp"            android:background="@color/transparentnew"            android:hint="Change Password"            android:imeOptions="actionSearch"            android:paddingTop="12dp"            android:paddingBottom="12dp"            android:singleLine="true"            android:text="Change Password"            android:textColor="@color/common_txt_color"            android:textColorHint="@color/common_hint_txt_color"            android:textSize="18sp"            android:typeface="sans" />    </LinearLayout>    <LinearLayout        app:layout_constraintTop_toBottomOf="@+id/top_layout"        android:id="@+id/pay100"        android:layout_width="match_parent"        android:layout_height="wrap_content" android:orientation="vertical">            <LinearLayout                android:background="@drawable/myinfo_bg"                android:padding="15dp"                android:layout_marginLeft="14dp"                android:layout_marginRight="14dp"                android:layout_marginTop="14dp"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical"                android:layout_centerVertical="true">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Old Password"                    android:textColor="#80868B"                    android:typeface="sans"                    android:textSize="16sp"                    />                <EditText                    android:background="@color/transparentnew"                    android:id="@+id/oldPWD"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:hint="Enter a old password"                    android:textColorHint="@color/common_hint_txt_color"                    android:textColor="@color/common_txt_color"                    android:textSize="14sp"                    android:typeface="sans"                    android:layout_marginTop="8dp"                    />            </LinearLayout>        <LinearLayout            android:background="@drawable/myinfo_bg"            android:padding="15dp"            android:layout_marginLeft="14dp"            android:layout_marginRight="14dp"            android:layout_marginTop="14dp"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            android:layout_centerVertical="true">            <TextView                android:id="@+id/coin_desc"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="New Password"                android:textColor="#80868B"                android:typeface="sans"                android:textSize="16sp"                />            <EditText                android:background="@color/transparentnew"                android:id="@+id/newPWD"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:hint="Enter a new password"                android:textColor="@color/common_txt_color"                android:textColorHint="@color/common_hint_txt_color"                android:textSize="14sp"                android:typeface="sans"                android:layout_marginTop="8dp"                />        </LinearLayout>        <LinearLayout            android:background="@drawable/myinfo_bg"            android:padding="15dp"            android:layout_marginLeft="14dp"            android:layout_marginRight="14dp"            android:layout_marginTop="14dp"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            android:layout_centerVertical="true">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Confirm Password"                android:textColor="#80868B"                android:typeface="sans"                android:textSize="16sp"                />            <EditText                android:background="@color/transparentnew"                android:id="@+id/confirmPWD"                android:hint="Please match the new password"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textColorHint="@color/common_hint_txt_color"                android:textColor="@color/common_txt_color"                android:textSize="14sp"                android:typeface="sans"                android:layout_marginTop="8dp"                />        </LinearLayout>    </LinearLayout>    <Button        android:id="@+id/confirm"        android:layout_marginBottom="30dp"        android:background="@drawable/red_corner_bg"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintBottom_toBottomOf="parent"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="CONFIRM"        android:textColor="#ffffffff"        android:textSize="14sp"        /></android.support.constraint.ConstraintLayout>