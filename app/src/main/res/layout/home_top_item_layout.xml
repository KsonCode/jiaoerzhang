<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    xmlns:app="http://schemas.android.com/apk/res-auto">    <FrameLayout        android:id="@+id/layout"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintRight_toRightOf="parent"        android:layout_width="wrap_content"        android:layout_height="wrap_content">        <com.facebook.drawee.view.SimpleDraweeView            android:id="@+id/topIcon"            android:layout_width="80dp"            android:layout_height="80dp"            app:actualImageScaleType="centerCrop"            app:placeholderImage="@drawable/placeholder"            android:layout_marginRight="15dp"            app:roundAsCircle="true"/>        <TextView            android:id="@+id/num"            android:background="@drawable/dot_bg"            android:layout_width="wrap_content"            android:gravity="center"            android:typeface="sans"            android:textColor="@color/white"            android:layout_height="wrap_content"            android:text="1"/>    </FrameLayout>    <TextView        android:id="@+id/topNameTv"        app:layout_constraintTop_toBottomOf="@+id/layout"        android:layout_width="wrap_content"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        android:layout_height="wrap_content"        android:layout_marginTop="4dp"        android:textSize="12sp"        android:textColor="@color/common_hint_txt_color"        android:typeface="sans"        android:layout_marginRight="15dp"        android:text="小猫咪"/></android.support.constraint.ConstraintLayout>