<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintTop_toTopOf="parent">       <android.support.v7.widget.CardView           android:layout_margin="15dp"           android:layout_width="match_parent"           android:layout_height="42dp"           android:outlineSpotShadowColor="#999999"           app:cardCornerRadius="7dp"           >                      <LinearLayout               android:layout_gravity="center"               android:orientation="horizontal"               android:layout_width="match_parent"               android:layout_height="wrap_content">                              <ImageView                   android:layout_margin="15dp"                   android:layout_width="wrap_content"                   android:layout_height="wrap_content"                   android:layout_gravity="center"                   android:src="@mipmap/search_icon"/>               <TextView                   android:gravity="left|center"                   android:id="@+id/search_album"                   android:hint="Search album"                   android:typeface="sans"                   android:textSize="14sp"                   android:textColor="@color/common_txt_color"                   android:textColorHint="@color/common_hint_txt_color"                   android:layout_gravity="center"                   android:background="@color/transparentnew"                   android:layout_width="match_parent"                   android:layout_height="match_parent"                   />                          </LinearLayout>       </android.support.v7.widget.CardView>        <com.lzj.gallery.library.views.BannerViewPager            android:id="@+id/bannerLayout"            android:layout_width="match_parent"            android:layout_height="128dp"            android:layout_marginLeft="15dp"            android:layout_marginRight="15dp"/>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            android:layout_margin="15dp">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                >                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:text="Popular album"                    android:textColor="@color/common_txt_color"                    android:textSize="16sp"/>                <TextView                        android:id="@+id/popularAlbum"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentRight="true"                    android:layout_centerVertical="true"                    android:drawableRight="@mipmap/arrow_red_right_icon"                    android:gravity="center"                    android:drawablePadding="10dp"                    android:text="see more"                    android:textColor="@color/common_red_txt_color" />            </RelativeLayout>            <com.lzj.gallery.library.views.BannerViewPager                android:id="@+id/albumLayout"                android:layout_width="match_parent"                android:layout_marginTop="10dp"                android:layout_height="148dp"/>        </LinearLayout>    </LinearLayout></android.support.constraint.ConstraintLayout>