<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".ui.activity.SplashActivity">    <ImageView        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintLeft_toLeftOf="parent"        android:id="@+id/img_center"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_gravity="center"        android:scaleType="centerCrop"        android:src="@drawable/bg_splash" />    <ImageView        android:id="@+id/iv_icon"        android:visibility="gone"        app:layout_constraintBottom_toTopOf="@+id/login_tips"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintBottom_toBottomOf="parent"        android:src="@mipmap/ic_launcher"/>    <TextView        android:id="@+id/login_tips"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="点击图标跳过1秒"        android:textSize="16dp"        android:textColor="@color/white"        android:layout_margin="10dp"/></android.support.constraint.ConstraintLayout>