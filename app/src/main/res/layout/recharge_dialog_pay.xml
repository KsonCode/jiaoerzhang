<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/dialog_bg">    <android.support.v7.widget.CardView        android:id="@+id/card_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:outlineSpotShadowColor="#999999"        app:cardCornerRadius="7dp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="parent">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="24dp"            android:orientation="vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Payment information"                android:textColor="@color/common_txt_color"                android:textSize="20sp"                android:textStyle="bold"                android:typeface="sans" />            <EditText                android:id="@+id/card_num"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginTop="20dp"                android:background="@drawable/pay_gray_bg"                android:drawablePadding="6dp"                android:hint="Card Number"                android:paddingLeft="15dp"                android:paddingTop="12dp"                android:paddingRight="15dp"                android:paddingBottom="12dp"                android:text=""                android:textColor="@color/common_txt_color"                android:textColorHint="@color/common_hint_txt_color"                android:textSize="16sp"                android:typeface="sans" />            <EditText                android:id="@+id/expiry_month"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginTop="10dp"                android:background="@drawable/pay_gray_bg"                android:drawablePadding="6dp"                android:hint="Expiration Month"                android:paddingLeft="15dp"                android:paddingTop="12dp"                android:paddingRight="15dp"                android:paddingBottom="12dp"                android:text=""                android:textColor="@color/common_txt_color"                android:textColorHint="@color/common_hint_txt_color"                android:textSize="16sp"                android:typeface="sans" />            <EditText                android:id="@+id/expiry_year"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginTop="10dp"                android:background="@drawable/pay_gray_bg"                android:drawablePadding="6dp"                android:hint="Expiration Year"                android:paddingLeft="15dp"                android:paddingTop="12dp"                android:paddingRight="15dp"                android:paddingBottom="12dp"                android:text=""                android:textColor="@color/common_txt_color"                android:textColorHint="@color/common_hint_txt_color"                android:textSize="16sp"                android:typeface="sans" />            <EditText                android:id="@+id/security_code"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginTop="10dp"                android:background="@drawable/pay_gray_bg"                android:drawablePadding="6dp"                android:hint="Security Code"                android:paddingLeft="15dp"                android:paddingTop="12dp"                android:paddingRight="15dp"                android:paddingBottom="12dp"                android:text=""                android:textColor="@color/common_txt_color"                android:textColorHint="@color/common_hint_txt_color"                android:textSize="16sp"                android:typeface="sans" />            <EditText                android:id="@+id/email"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginTop="10dp"                android:background="@drawable/pay_gray_bg"                android:drawablePadding="6dp"                android:hint="Card Holder Email"                android:paddingLeft="15dp"                android:paddingTop="12dp"                android:paddingRight="15dp"                android:paddingBottom="12dp"                android:text=""                android:textColor="@color/common_txt_color"                android:textColorHint="@color/common_hint_txt_color"                android:textSize="16sp"                android:typeface="sans" />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="right"                android:layout_marginTop="24dp"                android:orientation="horizontal">                <TextView                    android:id="@+id/cancel"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="CANCEL"                    android:textColor="@color/common_hint_txt_color"                    android:textSize="14sp"                    android:typeface="sans" />                <TextView                    android:id="@+id/confirm"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="30dp"                    android:text="CONFIRM"                    android:textColor="@color/common_red_txt_color"                    android:textSize="14sp"                    android:typeface="sans" />            </LinearLayout>        </LinearLayout>    </android.support.v7.widget.CardView></android.support.constraint.ConstraintLayout>