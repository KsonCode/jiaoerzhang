<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:app="http://schemas.android.com/apk/res-auto">    <LinearLayout        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintLeft_toLeftOf="parent"        android:orientation="vertical"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <RelativeLayout            app:layout_constraintLeft_toLeftOf="parent"            app:layout_constraintTop_toTopOf="parent"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="15dp">            <FrameLayout                android:layout_centerVertical="true"                android:layout_alignParentLeft="true"                android:id="@+id/layout"                app:layout_constraintLeft_toLeftOf="parent"                app:layout_constraintTop_toTopOf="parent"                app:layout_constraintRight_toRightOf="parent"                android:layout_width="wrap_content"                android:layout_height="wrap_content">                <com.facebook.drawee.view.SimpleDraweeView                    android:id="@+id/topIcon"                    android:layout_width="68dp"                    android:layout_height="68dp"                    app:actualImageScaleType="centerCrop"                    app:placeholderImage="@drawable/placeholder"                    android:layout_marginRight="15dp"                    app:roundAsCircle="true"/>                <TextView                    android:id="@+id/num"                    android:background="@drawable/dot_bg"                    android:layout_width="wrap_content"                    android:gravity="center"                    android:typeface="sans"                    android:textColor="@color/white"                    android:layout_height="wrap_content"                    android:text="1"/>            </FrameLayout>            <LinearLayout                android:layout_centerVertical="true"                android:layout_toRightOf="@+id/layout"                android:layout_marginLeft="12dp"                android:layout_width="match_parent"                android:layout_height="wrap_content" android:orientation="vertical">                <TextView                    android:id="@+id/topNameTv"                    android:textColor="@color/common_txt_color"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:typeface="sans"                    android:textSize="16sp"                    android:text="Carolyn Goodman"/>                <android.support.v7.widget.RecyclerView                    android:layout_marginTop="10dp"                    android:id="@+id/tagRv"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"/>            </LinearLayout>            <TextView                    android:id="@+id/followingNum"                android:layout_alignParentRight="true"                android:typeface="sans"                android:textSize="12sp"                android:text="0"                android:drawableRight="@mipmap/unfollow_icon"                android:drawablePadding="4dp"                android:textColor="@color/common_hint_txt_color"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />        </RelativeLayout>        <View            android:layout_width="match_parent"            android:layout_height="1dp"            android:background="#EEEEEE"/>    </LinearLayout></android.support.constraint.ConstraintLayout>