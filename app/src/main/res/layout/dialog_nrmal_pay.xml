<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/dialog_bg"    xmlns:app="http://schemas.android.com/apk/res-auto">    <android.support.v7.widget.CardView        android:id="@+id/card_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintBottom_toBottomOf="parent"        android:outlineSpotShadowColor="#999999"        app:cardCornerRadius="7dp">        <LinearLayout            android:layout_margin="24dp"            android:layout_width="match_parent"            android:layout_height="wrap_content" android:orientation="vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Payment Note"                android:typeface="sans"                android:textStyle="bold"                android:textColor="@color/common_txt_color"                android:textSize="20sp"                />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content" android:orientation="horizontal">                <TextView                    android:id="@+id/coin_balance"                    android:layout_marginTop="8dp"                    android:background="@color/transparentnew"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Lady Coin Balance: 0"                    android:textColorHint="@color/common_hint_gray_color"                    android:typeface="sans"                    android:textColor="@color/common_hint_txt_color"                    android:textSize="14sp"                    />                <TextView                    android:id="@+id/not_enough"                    android:layout_marginTop="8dp"                    android:background="@color/transparentnew"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="(Not enough)"                    android:typeface="sans"                    android:textColor="@color/common_red_txt_color"                    android:textSize="14sp"                    />            </LinearLayout>            <RelativeLayout                android:id="@+id/day1_layout"                android:layout_marginTop="20dp"                android:background="@drawable/pay_red_bg"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/day1_txt"                    android:layout_marginLeft="15dp"                    android:layout_centerVertical="true"                    android:text="30 Days Payment"                    android:drawablePadding="6dp"                    android:drawableRight="@mipmap/coin_shot"                    android:typeface="sans"                    android:textSize="16sp"                    android:textColor="@color/common_red_txt_color"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <TextView                    android:id="@+id/price1_payment_count"                    android:layout_alignParentRight="true"                    android:layout_marginRight="15dp"                    android:layout_centerVertical="true"                    android:text="69 LC"                    android:typeface="sans"                    android:textSize="16sp"                    android:textColor="@color/common_red_txt_color"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />            </RelativeLayout>            <RelativeLayout                android:id="@+id/day2_layout"                android:layout_marginTop="10dp"                android:background="@drawable/pay_gray_bg"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/day2_txt"                    android:layout_marginLeft="15dp"                    android:layout_centerVertical="true"                    android:text="7 Days Payment"                    android:typeface="sans"                    android:textSize="16sp"                    android:textColor="@color/common_hint_txt_color"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <TextView                    android:id="@+id/price2_payment_count"                    android:layout_alignParentRight="true"                    android:layout_marginRight="15dp"                    android:layout_centerVertical="true"                    android:text="39 LC"                    android:typeface="sans"                    android:textSize="16sp"                    android:textColor="@color/common_hint_txt_color"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />            </RelativeLayout>            <RelativeLayout                android:id="@+id/day3_layout"                android:layout_marginTop="10dp"                android:background="@drawable/pay_gray_bg"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/day3_txt"                    android:layout_marginLeft="15dp"                    android:layout_centerVertical="true"                    android:text="1 Day Payment"                    android:typeface="sans"                    android:textSize="16sp"                    android:textColor="@color/common_hint_txt_color"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <TextView                    android:id="@+id/price3_payment_count"                    android:layout_alignParentRight="true"                    android:layout_marginRight="15dp"                    android:layout_centerVertical="true"                    android:text="39 LC"                    android:typeface="sans"                    android:textSize="16sp"                    android:textColor="@color/common_hint_txt_color"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />            </RelativeLayout>            <LinearLayout                android:layout_marginTop="26dp"                android:layout_gravity="right"                android:layout_width="wrap_content"                android:layout_height="wrap_content" android:orientation="horizontal">                <TextView                    android:id="@+id/cancel"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="CANCEL"                    android:textSize="14sp"                    android:textColor="@color/common_hint_txt_color"                    android:typeface="sans"/>                <TextView                    android:id="@+id/confirm"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="CONFIRM"                    android:layout_marginLeft="30dp"                    android:textSize="14sp"                    android:textColor="@color/common_red_txt_color"                    android:typeface="sans"/>            </LinearLayout>        </LinearLayout>    </android.support.v7.widget.CardView></android.support.constraint.ConstraintLayout>